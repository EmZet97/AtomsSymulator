<Window x:Class="AtomsSymulator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AtomsSymulator"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Closing="Window_Closing">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*"></ColumnDefinition>
            <ColumnDefinition Width="1*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Canvas x:Name="PlainCanvas" Width="400px" Height="400" Background="#FFB9B9B9" Grid.Column="0"/>
        <StackPanel Grid.Column="1">
            <Button Width="100px" Height="50px" Click="Button_Click" Background="#FFC5C5C5">Generuj</Button>
            <Button Content="Start/Stop" Width="100px" Height="50px" Click="Button_Click_1"></Button>
            <Button Content="Save" Width="100px" Height="50px" Click="Button_Click_2"></Button>
            <ComboBox Name="DropDownBox" Width="100px" Height="20px" SelectionChanged="DropDownBox_SelectionChanged"></ComboBox>
        </StackPanel>
        
    </Grid>
</Window>
